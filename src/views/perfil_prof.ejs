        }



        .nav-buttons .btn:hover {
            background-color: #ffd27f;
            /* Laranja claro ao passar o mouse */
            color: #1f496e;
            left: 0;
            transform: scale(1.05);
            /* Ao passar o mouse, o botão aparece por completo */
