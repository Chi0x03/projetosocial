    <script>
        const form = document.querySelector('#formUpdate');

        // Adiciona um evento de envio ao formulário
        form.addEventListener('submit', async (event) => {
            event.preventDefault(); // Previne o comportamento padrão de recarregar a página

            // Cria um objeto com os dados do formulário
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            console.log(data)

            try {
                // Faz a requisição POST enviando os dados como JSON
                const response = await axios.post('professor/update', data);
                console.log('Resposta:', response.data);
            } catch (error) {
                console.error('Erro ao enviar o formulário:', error);
            }
        });

        axios.get('/professor')
            .then((response) => {
                const nome = document.querySelector("#nomeProfessor");
                const nomeNoPerfil = document.querySelector("#nomePerfil");
                const disciplina = document.querySelector("#disciplina");
                const instituicao = document.querySelector("#instituicao");
                const email = document.querySelector("#email");
                const senha = document.querySelector("#senha");

                // Campos de texto
                nome.innerHTML = response.data.nome;
                nomeNoPerfil.value = response.data.nome;
                email.value = response.data.email;
                senha.value = response.data.senha;

                // Campos de select
                disciplina.value = response.data.disciplina;
                instituicao.value = response.data.instituicao;

                console.log(response.data);
            })
            .catch((e) => {
                console.log(e);
            });



