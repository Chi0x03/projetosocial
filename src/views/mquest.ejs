    <script>
        function deletarQuestao(id) {
            axios.delete(`/questoes/${id}`)
                .then(response => {
                    console.log(response.data);
                    // atualizar a tabela com as quest√µes atualizadas
                    window.location.reload();
                })
                .catch(error => {
                    console.error(error);
                });
        }

        // adicionar quest√£o ao localStorage e evitar adicionar ela duas vezes
        function adicionarQuestao(questao) {
            const questoes = JSON.parse(localStorage.getItem('questoes')) || [];
            if (!questoes.includes(questao)) {
                questoes.push(questao);
                localStorage.setItem('questoes', JSON.stringify(questoes));
            } else {
                alert('Quest√£o adicionada anteriormente!');
            }
        }
    </script>

