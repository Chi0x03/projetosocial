        #btn_prof,
        #btn_al {
            position: relative;
            color: #ffffff;
            background-color: #ff7402;
            width: 300px;
            height: 80px;
            border-radius: 35px;
            font-family: DoubleBassB;
            font-size: 35px;
            border: none;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            transition: all 0.4s ease;
        }

        #btn_prof:hover,
        #btn_al:hover {
            /* box-shadow: 0 0 25px rgba(255, 255, 255, 0.9), 0 0 50px rgba(255, 116, 2, 0.7); */
            transform: scale(1.05);
        }

        #btn_prof::before,
        #btn_al::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 50px;
            border: 3px solid transparent;
            box-sizing: border-box;
            transition: border-color 0.4s ease-in-out;
            z-index: 1;
        }

        #btn_prof:hover::before,
        #btn_al:hover::before {
            border-color: #ffffff;
            animation: drawBorder 1.2s linear forwards, pulseGlow 2s ease-in-out infinite;
        }

        @keyframes drawBorder {
            0% {
                border-color: transparent;
                clip-path: inset(0 100% 0 0);
                /* Esconde a linha inicialmente */
            }

            25% {
                clip-path: inset(0 0 0 100%);
            }

            50% {
                clip-path: inset(0 0 75% 0);
            }

            75% {
                clip-path: inset(100% 0 0 0);
            }

            100% {
                clip-path: inset(0);
            }
        }

        @keyframes pulseGlow {

            0%,
            100% {
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.9);
            }

            50% {
                box-shadow: 0 0 20px rgba(255, 255, 255, 1), 0 0 50px rgb(255, 255, 255);
            }
        }

        @keyframes expandEffect {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        #btn_prof:hover,
        #btn_al:hover {
            animation: expandEffect 0.8s ease-in-out forwards;
        }

        #robo {
            width: 350px;
            height: 250px;
            position: relative;
            top: -100px;
        }

        a {
            margin: 0px;
            padding: 0px;
            text-decoration: none;
        }

        @keyframes moveHorizontally {

            0%,
            100% {
                transform: translate(0, 0);
            }

            25% {
                transform: translate(0, -20px);
                /* Para cima */
            }

            50% {
                transform: translate(20px, 0);
                /* Para a direita */
            }

            75% {
                transform: translate(0, 20px);
                /* Para baixo */
            }
        }

        .elemento {
            animation: mover 6s ease-in-out infinite;
            /* Duração da animação */
        }

        .moving-image {
            animation: moveHorizontally 5s infinite ease-in-out;
            /* 5 segundos, loop infinito */
        }

