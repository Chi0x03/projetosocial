<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link rel="stylesheet" href="EstiloLP.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <div class="container">
        <form id="formLogin">
            
            <h1 id="cd">Crie sua conta</h1>
            <div class="input-box">
                <input type="text" name="nome" placeholder="Nome">
            </div>
            <div class="input-box">
                <input type="text" name="email" placeholder="Email">
            </div>
            <div class="input-box">
                <input type="text" name="senha" placeholder="Senha">
            </div>
            <button class="btn">Criar conta</button>
            <div class="EntrarConta">
                <p>Já tem uma conta? <a href="LoginPg.html">Faça login</a></p>
            </div>
        </form>
    </div>
</body>
<script>
    const form = document.querySelector('#formLogin');

    // Adiciona um evento de envio ao formulário
    form.addEventListener('submit', async (event) => {
        event.preventDefault(); // Previne o comportamento padrão de recarregar a página

        // Cria um objeto com os dados do formulário
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
            // Faz a requisição POST enviando os dados como JSON
            const response = await axios.post('auth/register', data);
            window.location.href = "/perfil_prof.html"
            console.log('Resposta:', response.data);
        } catch (error) {
            console.error('Erro ao enviar o formulário:', error);
        }
    });
</script>
</html>
