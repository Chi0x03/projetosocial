<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faça seu login</title>
    <link rel="stylesheet" href="EstiloLP.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <div class="container">
        <form id="formLogin">
            <img class="elemento" src="IMG/elementoPg.png" alt="elemento"></img>
            <h1 id="lgn">Faça login</h1>
            <div class="input-box">
                <input type="email" name="email" placeholder="Email">
            </div>
            <div class="input-box">
                <input type="password" name="senha" placeholder="Senha">
            </div>
            <button class="btn">Fazer Login</button>
            <div class="EntrarConta">
                <p>Não tem uma conta? <a href="CadastroPg.html">Cadastre-se</a></p>
            </div>
        </form>
    </div>
</body>
<script>
    const form = document.querySelector('#formLogin');

    // Adiciona um evento de envio ao formulário
    form.addEventListener('submit', async (event) => {
        event.preventDefault(); // Previne o comportamento padrão de recarregar a página

        // Cria um objeto com os dados do formulário
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
            // Faz a requisição POST enviando os dados como JSON
            const response = await axios.post('auth/login', data);
            window.location.href = "/perfil_prof.html"
            console.log('Resposta:', response.data);
        } catch (error) {
            console.error('Erro ao enviar o formulário:', error);
        }
    });
</script>

</html>