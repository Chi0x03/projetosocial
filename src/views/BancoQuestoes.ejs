    <script>
        // Função para abrir o modal
        function abrirPasta() {
            limparTabela();
            preencherTabela();
            document.getElementById("myModal").style.display = "block";
        }

        // função para preencher tabela com questões no localstorage
        function preencherTabela() {
            const questoes = JSON.parse(localStorage.getItem('questoes'));
            if (!questoes) {
                return;
            }
            questoes.map((questao, index) => {
                const linha = document.createElement("tr");
                const numero = document.createElement("td");
                const questaoConteudo = document.createElement("td");
                const icone = document.createElement("td");
                const imagem = document.createElement("img");
                imagem.src = "https://cdn-icons-png.flaticon.com/512/1828/1828843.png";
                imagem.height = 20;
                imagem.width = 20;
                icone.style.cursor = "pointer";
                icone.addEventListener("click", () => {
                    // Remover questão do localstorage
                    questoes.splice(index, 1);
                    localStorage.setItem("questoes", JSON.stringify(questoes));
                    fecharModal();
                    abrirPasta();
                })
                icone.appendChild(imagem);
                numero.textContent = index + 1;
                questaoConteudo.textContent = questao.enunciado;
                linha.appendChild(numero);
                linha.appendChild(questaoConteudo);
                linha.appendChild(icone);
                document.getElementById("tabela-modal").appendChild(linha);
            });
        }

        // função para limpar tabela-modal
        function limparTabela() {
            document.getElementById("tabela-modal").innerHTML = "";
        }

        // Função para fechar o modal
        function fecharModal() {
            document.getElementById("myModal").style.display = "none";
        }

        // Fecha o modal ao clicar fora dele
        window.onclick = function (event) {
            const modal = document.getElementById("myModal");
            if (event.target == modal) {
                fecharModal();
            }
        }

        function limparLocalStorage() {
            localStorage.removeItem('questoes');
        }

        // função para retornar um array de id das provas que estão no localstorage
        function getIdsProvas() {
            const questoes = JSON.parse(localStorage.getItem('questoes'));

            if (!questoes) {
                return [];
            }

            return questoes.map(questao => questao.id);
        }
    </script>

